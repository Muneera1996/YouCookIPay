<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PaymentMethodPopUp">

        <TextView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Type"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bill"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="We will look forward to serving you our best meal again!"
            android:textSize="15sp"
            />

        <TextView
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We will look forward to serving you our best meal again!"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/paymentMethod_submit"
            android:src="@drawable/submit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            />


    </LinearLayout>
</ScrollView>