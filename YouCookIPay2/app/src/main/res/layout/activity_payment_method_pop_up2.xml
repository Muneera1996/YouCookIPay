<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PaymentMethodPopUp">

        <TextView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="==Payment Method=="
            android:textSize="20sp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fields_layout_bg">

            <RelativeLayout
                android:background="@drawable/fields_layout_bg2"
                android:id="@+id/user_icon"
                android:layout_width="60dp"
                android:layout_height="45dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/dropdown_arrow" />
            </RelativeLayout>

            <EditText
                android:id="@+id/orderScreen_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/user_icon"
                android:backgroundTint="@android:color/transparent"
                android:gravity="start"
                android:layout_marginLeft="5dp"
                android:textColor="#3b6498"
                android:textColorHint="#3b6498"
                android:hint="Select Payment Method" />
        </RelativeLayout>

        <TextView
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="standard process of online payment through Debit Card, Credit Card, Pre Paid Card or Paypal will be integrated "
            android:textSize="15sp"
            />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/paymentMethod_submit"
            android:src="@drawable/submit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            />


    </LinearLayout>
</ScrollView>