<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".PaymentMethodPopUp">
        <TextView
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="== Select Type =="
            android:textSize="20sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/sign_type"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Are You A" />

            <RelativeLayout
                android:id="@+id/seller_option"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/checkbox_seller"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/checkbox" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/checkbox_seller"
                    android:text="Seller" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/consumer_option"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/checkbox_Consumer"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/checkbox" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/checkbox_Consumer"
                    android:text="Consumer" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sign_seller_type"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Seller Type" />

            <RelativeLayout
                android:id="@+id/homemade_option"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/checkbox_Homemade"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/checkbox" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/checkbox_Homemade"
                    android:text="Home Made" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/restaurant_option"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/checkbox_Restaurant"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/checkbox" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/checkbox_Restaurant"
                    android:text="Restaurant" />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/signup_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/sign_up_btn">
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>