<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:background="@drawable/overlay_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddMealADActivity"
    tools:showIn="@layout/app_bar_add_meal_ad"
    xmlns:android="http://schemas.android.com/apk/res/android">
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/layout_addMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:textStyle="bold"
                    android:text="What would you like to"
                    android:paddingLeft="5dp"
                    android:textColor="#3b6498"/>

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/pick_sell"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">

                    <ImageView
                        android:id="@+id/checkbox_sell"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/button_bg" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/checkbox_sell"
                        android:text="Sell"
                        android:textColor="#3b6498"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pick_donate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/checkbox_donate"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/button_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/checkbox_donate"
                        android:text="Donate"
                        android:textColor="#3b6498"/>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Is it"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textColor="#3b6498"/>

            <RelativeLayout
                android:id="@+id/pick_commercial_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">

                <ImageView
                    android:id="@+id/checkbox_commercial"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/button_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/checkbox_commercial"
                    android:text="Commercial Food"
                    android:textColor="#3b6498"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pick_private_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/checkbox_private_food"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/button_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/checkbox_private_food"
                    android:text="Private Food"
                    android:textColor="#3b6498"/>
            </RelativeLayout>


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:paddingLeft="5dp"
                    android:text="Is it"
                    android:textColor="#3b6498"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/pick_food"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3">

                    <ImageView
                        android:id="@+id/checkbox_food"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/button_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/checkbox_food"
                        android:text="Food"
                        android:textColor="#3b6498"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pick_beverages"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/checkbox_beverages"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/button_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/checkbox_beverages"
                        android:text="Beverages"
                        android:textColor="#3b6498" />
                </RelativeLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Name of the Meal"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:textStyle="bold"
                android:textColor="#3b6498"/>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/fields_layout_bg">

                <EditText
                    android:id="@+id/addMeal_meal_name"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="#3b6498"
                    android:textColorHint="#3b6498" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Restaurant Name"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:textStyle="bold"
                android:textColor="#3b6498"/>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/fields_layout_bg">

                <EditText
                    android:textSize="12dp"
                    android:id="@+id/addMeal_resturant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="start"
                    android:textColor="#3b6498"
                    android:textColorHint="#3b6498" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Price"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:textStyle="bold"
                android:textColor="#3b6498"/>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/fields_layout_bg">

                <EditText
                    android:id="@+id/addMeal_price"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="start"
                    android:textColor="#3b6498"
                    android:textColorHint="#3b6498" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Description"
                android:layout_gravity="start"
                android:layout_weight="0.7"
                android:textStyle="bold"
                android:textColor="#3b6498"/>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/fields_layout_bg">

                <EditText
                    android:id="@+id/addMeal_description"
                    android:textSize="12dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="start"
                    android:layout_marginLeft="5dp"
                    android:textColor="#3b6498"
                    android:textColorHint="#3b6498"
                    />
            </RelativeLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/addMealAd_upload_image1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:src="@drawable/update_image" />

                    <ImageView
                        android:id="@+id/addMealAd_upload_image2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:src="@drawable/update_image" />

                    <ImageView
                        android:id="@+id/addMealAd_upload_image3"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:src="@drawable/update_image" />
                </LinearLayout>
        <LinearLayout
            android:id="@+id/add_meals_image_visibility"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/addMealAd_image1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="start" />
            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/addMealAd_image2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="start" />
            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/addMealAd_image3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="start" />
            </LinearLayout>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal" />

            <ImageView
                android:id="@+id/addMealAd_publish_btn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/publish_image" />
    </LinearLayout>
</ScrollView>
</LinearLayout>